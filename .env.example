# Google Cloud Storage Configuration
GOOGLE_CLOUD_PROJECT_ID=sebi-hackathon
GOOGLE_CLOUD_KEY_FILE=path/to/your/service-account-key.json
GOOGLE_CLOUD_BUCKET_NAME=getclarity-audio-bucket

# Public bucket name for client-side audio URL generation
NEXT_PUBLIC_GOOGLE_CLOUD_BUCKET_NAME=getclarity-audio-bucket

# Database Configuration (if you want to store audio metadata)
DATABASE_URL=your-database-connection-string

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Audio Upload Configuration
MAX_AUDIO_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_AUDIO_FORMATS=audio/mpeg,audio/wav,audio/mp3,audio/ogg
