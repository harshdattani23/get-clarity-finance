# Google Cloud Storage Configuration
# Your existing project and bucket
GOOGLE_CLOUD_PROJECT_ID=sebi-hackathon
GOOGLE_CLOUD_BUCKET_NAME=getclarity-audio-bucket

# Public bucket name for client-side audio URL generation
NEXT_PUBLIC_GOOGLE_CLOUD_BUCKET_NAME=getclarity-audio-bucket

# Optional: Specific service account key file (if not using gcloud auth)
# GOOGLE_CLOUD_KEY_FILE=./service-account-key.json

# Database Configuration (your existing setup)
DATABASE_URL=your-existing-database-url

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Audio Upload Configuration
MAX_AUDIO_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_AUDIO_FORMATS=audio/mpeg,audio/wav,audio/mp3,audio/ogg,audio/m4a
