# Secure File Storage Configuration
# Copy this file to .env.local and configure the values

# Master encryption key for file security (generate a random 64-character hex string)
FILE_ENCRYPTION_KEY=your-secure-64-character-hex-key-here-generated-randomly

# Cloud storage configuration (choose one)
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-secure-documents-bucket
AWS_S3_ENDPOINT=https://s3.amazonaws.com

# Google Cloud Storage Configuration (alternative)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=your-secure-documents-bucket
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Azure Blob Storage Configuration (alternative)
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONTAINER_NAME=secure-documents

# File storage settings
SECURE_STORAGE_PROVIDER=local # local, aws-s3, google-cloud, azure-blob
SECURE_STORAGE_BASE_PATH=/secure/documents
MAX_FILE_RETENTION_DAYS=90
CLEANUP_EXPIRED_FILES_CRON=0 2 * * * # Daily at 2 AM

# Access control settings
FILE_ACCESS_LOG_RETENTION_DAYS=365
REQUIRE_AUTH_FOR_DOWNLOAD=true
MAX_DOWNLOAD_URL_VALIDITY_HOURS=24
DEFAULT_FILE_ACCESS_LEVEL=private

# Security settings
ENABLE_FILE_VIRUS_SCANNING=false
VIRUS_SCAN_API_ENDPOINT=https://your-antivirus-service.com/scan
ENABLE_FILE_CONTENT_FILTERING=true
BLOCKED_FILE_EXTENSIONS=exe,bat,com,scr,pif

# Monitoring and alerting
ENABLE_FILE_ACCESS_MONITORING=true
ALERT_ON_SUSPICIOUS_ACCESS=true
ALERT_EMAIL=security@yourcompany.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Performance settings
FILE_UPLOAD_CHUNK_SIZE=5242880 # 5MB chunks
MAX_CONCURRENT_UPLOADS=3
ENABLE_FILE_COMPRESSION=true
COMPRESSION_THRESHOLD_BYTES=1048576 # 1MB

# Backup and redundancy
ENABLE_CROSS_REGION_REPLICATION=false
BACKUP_REGION=us-west-2
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30

# Database configuration for metadata storage
# (Use your existing database connection settings)
DATABASE_URL=your-existing-database-connection-string

# Optional: Redis for caching and temporary tokens
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=sebi-verify-secure-storage

# Application settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
ENVIRONMENT=development # development, staging, production
